@helper DisplayInfo(List<Customer>list) {
    // your helper can contain code and/or markup, e.g.
    // var msg = "Hello " + name;
    // <p>@msg</p>
    // For more information, visit http://go.microsoft.com/fwlink/?LinkID=204658
    <div>
        <table border="1">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
            @foreach(var p in list)
            {
                <tr>
                    <td>p.Id</td>
                    <td>p.Name</td>
                    <td>p.Email</td>
                </tr>
            }
        </table>
    </div>

}
